<script>
    document.addEventListener("DOMContentLoaded", function() {
        // العثور على عنصر الـ checkbox المرتبط بشروط الحجز
        var termsCheckbox = document.getElementById("terms_checkbox");

        // العثور على زر التأكيد
        var submitButton = document.getElementById("submitButton");

        // إضافة مراقب للضغط على زر التأكيد
        submitButton.addEventListener("click", function(event) {
            // التحقق مما إذا كانت الشروط موافق عليها
            if (!termsCheckbox.checked) {
                event.preventDefault(); // إيقاف تقديم الاستمارة
                alert("يرجى الموافقة على شروط الحجز قبل التأكيد."); // إظهار رسالة تنبيه
            }
        });
    });
</script>
